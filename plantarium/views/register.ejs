<!--
- el .prpeventDefault( ) va al formulari (no al botó)
- no t'oblidis de l'atribut 'name' dels inputs
- recupera els valors dels inputs dintre del addEventListener()
- stringify el body
- després de fer fetch, fer un .then on comprivi si res.ok (i donar feedback a l'usuari)
-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="forms.css">
</head>

<body>
    <main>
        <div class="img-container">
            <img src="arbre.png" alt="arbre">
        </div>
        <h1>REGISTRE</h1>
        <form id="register-form">
            <div class="input-container">
                <label for="username">Usuari:</label>
                <input type="text" id="username" name="username">
            </div>
            <div class="input-container">
                <label for="password">Contrasenya:</label>
                <input type="password" id="password" name="password">
            </div>
            <div class="input-container">
                <label for="password-confirm">Repeteix la contrasenya:</label>
                <input type="password" id="password-confirm" name="password-confirm">
            </div>
            <span class="span-info"></span>
            <button type="submit">Registrar-se</button>

            <span>Ja tens un compte? <a href="/login">Inicia Sessió</a></span>

        </form>
    </main>
</body>

</html>

<script>
    const $ = el => document.querySelector(el);


    const formulari = $('#register-form');


    formulari.addEventListener('submit', e => {
        e.preventDefault();


        const username = $('#username').value;
        const password = $('#password').value;
        const passwordConfirm = $('#password-confirm').value;
        
        const registerSpan = $('.span-info');


        if (password !== passwordConfirm) {
            alert('Les contrasenyes no coincideixen :(');
            return;
        };

        fetch('/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ username, password })
        })
            .then((res) => {
                if (res.ok) {
                    registerSpan.innerText = "Usuari registrat";
                    registerSpan.style.color = "green";

                    console.log("Usuari registrat");
                } else {
                    registerSpan.innerText = "Error en registrar l'usuari";
                    registerSpan.style.color = "red";

                    console.log("Error en registrar l'usuari");
                }
            });

    });

</script>