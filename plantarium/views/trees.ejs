<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arbres - Plantarium</title>
    <link rel="stylesheet" href="/css/list.css">
    <script src="/js/trees.js"></script>
</head>

<body>
    <a class="return-btn" href="/">< PLANTARIUM</a>
    <main>
        <h1>ARBRES</h1>
        <a class="add-btn" href="/form"><img src="/images/plus-square.svg" alt="add-btn"></a>
        <ul>
            <% data.trees.forEach((tree)=> { %>
                <li>
                    <img class="flor-img" src="/images/arbre.png" alt="arbre">
                    <div class="content-container">
                        <p class="title">
                            <%= tree.name %>
                        </p>
                        <p><strong>Categoria:</strong> <%= tree.category %></p>
                        <p><strong>Estaci√≥:</strong> <%= tree.bloomSeason %></p>

                        <div class="btn-container">
                            <a class="cta" href="/arbres/<%= tree.id %>"><img src="/images/eye.svg" alt="details-btn"></a>
                            <a class="cta" href="/form-edit?id=<%= tree.id %>">
                                <img src="/images/edit-2.svg" alt="edit-btn">
                            </a>
                            <button class="cta" onclick="deleteTree('<%= tree.id %>')">
                                <img src="/images/trash-2.svg" alt="delete-btn">
                            </button>
                        </div>
                    </div>
                </li>
            <% }) %>
        </ul>
    </main>
</body>

</html>
