<!--
- el .prpeventDefault( ) va al formulari (no al botó)
- no t'oblidis de l'atribut 'name' dels inputs
- recupera els valors dels inputs dintre del addEventListener()

-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="login.css">
</head>

<body>
    <main>
        <h1>LOGIN</h1>
        <form id="login-form">
            <div class="input-container">
                <label for="username">Usuari:</label>
                <input type="text" id="username" name="username">
            </div>
            <div class="input-container">
                <label for="password">Contrasenya:</label>
                <input type="password" id="password" name="password">
            </div>
            <span class="span-info">INFO</span>

            <button type="submit">Iniciar Sessió</button>
        </form>
    </main>
</body>

</html>

<script>
    const $ = el => document.querySelector(el);


    const formulari = $('#login-form');



    formulari.addEventListener('submit', e => {
        e.preventDefault();

        const username = $('#username').value;
        const password = $('#password').value;
        const loginSpan = $('.span-info');


        fetch('/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ username, password })
        })
            .then(res => {
                if (res.ok) {
                    loginSpan.innerText = 'Session iniciada ..Entrando..'
                    loginSpan.style.color = 'green'
                } else {
                    loginSpan.innerText = 'Error al iniciar session'
                    loginSpan.style.color = 'red'
                }
            })


    });




</script>