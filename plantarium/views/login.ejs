<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <main>
        <div class="img-container">
            <img src="/images/flor.png" alt="flor">
        </div>
        <h1>LOGIN</h1>
        <form id="login-form">
            <div class="input-container">
                <label for="username">Usuari:</label>
                <input type="text" id="username" name="username">
            </div>
            <div class="input-container">
                <label for="password">Contrasenya:</label>
                <input type="password" id="password" name="password">
            </div>
            <span class="span-info"></span>

            <button type="submit">Iniciar Sessi贸</button>

            <span>No tens compte? <a href="/register">Registra't</a></span>

        </form>

    </main>
</body>

</html>

<script>
    const $ = el => document.querySelector(el);


    const formulari = $('#login-form');



    formulari.addEventListener('submit', e => {
        e.preventDefault();

        const username = $('#username').value;
        const password = $('#password').value;
        const loginSpan = $('.span-info');


        fetch('/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ username, password })
        })
        .then(res => {
            if (res.ok) {
                loginSpan.innerText = 'Sessi贸 iniciada ..Entrant..';
                loginSpan.style.color = 'green';
                setTimeout(() => {
                    window.location.href = '/';
                }, 2000)
            } else {
                loginSpan.innerText = 'Error en iniciar sessi贸';
                loginSpan.style.color = 'red';
            }
        })


    });




</script>